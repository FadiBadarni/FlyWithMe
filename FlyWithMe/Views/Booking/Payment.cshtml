@model FlyWithMe.Models.Payment

@{
    ViewBag.Title = "Payment";
    FlyWithMe.Class.Planes plane1 = ViewBag.planes1;
    FlyWithMe.Class.Planes plane2 = ViewBag.planes2;
    List<FlyWithMe.Models.Passenger> passenger = ViewBag.p;
    FlyWithMe.Class.Searching searching= ViewBag.search;
}

<head>
    @Styles.Render("~/Content/Payment.css")
</head>
<div class="payment-form">
    @using (Html.BeginForm("/ProcessPayment", "post"))
    {
        <div class="form-group">
            @Html.Label("Name")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Email")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Card Number")
            @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Expiration Date")
            @Html.TextBoxFor(m => m.ExpirationDate, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Security Code")
            @Html.TextBoxFor(m => m.SecurityCode, new { @class = "form-control" })
        </div>

        <button type="submit" class="pay-button">Submit Payment</button>
    }
</div>
<div class="information">
    <h2>
        Here goes total information about the whole booking made so far
        You want to go  From @searching.Origin To @searching.Return in
        @plane1 
        and back with
        @plane2
        and you want to pay @plane1.Price + @plane2.Price

        
        for @passenger.Count,
        @foreach (FlyWithMe.Models.Passenger p in passenger)
        {
            int i = 1;
            Html.TextBox("the  passenger number" + i);@p
            Html.TextBox("will sit in");
            Html.TextBox((plane1.Capacity + i).ToString());

        }
    </h2>
   
    
</div>
